<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HowIsTheWeather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="splashCustomTextView" parent="android:TextAppearance.DeviceDefault">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/name_app_string</item>

    </style>

    <style name="FirstCustomTextView" parent="android:TextAppearance.DeviceDefault">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SecondCustomTextView" parent="android:TextAppearance.DeviceDefault">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>