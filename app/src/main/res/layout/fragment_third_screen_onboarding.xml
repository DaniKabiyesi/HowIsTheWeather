<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_app"
    tools:context=".ui.onboarding.screens.ThirdScreenOnboarding">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewThirdScreenOnboarding"
        android:layout_width="399dp"
        android:layout_height="334dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/third_image_onboarding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/firstTextThirdScreenOnboarding"
        style="@style/FirstCustomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="Keep your day going with our tips"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewThirdScreenOnboarding" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/secondTextThirdScreenOnboarding"
        style="@style/SecondCustomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="To keep you safe, we have some specials tips to remain your day safe"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstTextThirdScreenOnboarding" />

    <com.studying.howistheweather.utils.AccessButton
        android:id="@+id/nextScreenButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        app:button_text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondTextThirdScreenOnboarding" />


</androidx.constraintlayout.widget.ConstraintLayout>